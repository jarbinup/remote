{
  "name": "hello-morden-auto",
  "version": "0.1.0",
  "scripts": {
    "reset": "del-cli node_modules",
    "dev": "modern dev",
    "build": "modern build",
    "start": "modern start",
    "new": "modern new",
    "lint": "modern lint"
  },
  "engines": {
    "node": ">=14.17.6"
  },
  "eslintConfig": {
    "extends": [
      "@modern-js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "@modern-js/plugin-less": "^1.1.1",
    "@modern-js/runtime": "^1.0.0",
    "antd": "^4.17.3",
    "ladda": "^2.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-ladda": "^6.0.0"
  },
  "devDependencies": {
    "@modern-js/app-tools": "^1.0.0",
    "@modern-js/plugin-jarvis": "^1.0.0",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "del-cli": "^4.0.1",
    "typescript": "^4.5.4"
  },
  "modernConfig": {
    "runtime": {
      "router": true,
      "state": true
    },
    "output": {
      "enableModernMode": true,
      "polyfill": "ua"
    }
  }
}